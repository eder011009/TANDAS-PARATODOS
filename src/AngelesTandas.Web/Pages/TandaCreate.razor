@layout MainLayout
@page "/tandas/create"
@attribute [Authorize]
@using Microsoft.AspNetCore.Authorization
@inject AngelesTandas.Application.ITandaService TandaService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav

<div class="container mt-5">
    <h2>➕ Crear Nueva Tanda</h2>

    <div class="card">
        <div class="card-body">
            <EditForm Model="@model" OnValidSubmit="@CreateTanda">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="mb-3">
                    <label class="form-label">Nombre de la Tanda</label>
                    <InputText class="form-control" @bind-Value="model.Name" />
                    <ValidationMessage For="@(() => model.Name)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Monto por Persona</label>
                    <InputNumber class="form-control" @bind-Value="model.AmountPerPerson" />
                    <ValidationMessage For="@(() => model.AmountPerPerson)" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Número de Participantes</label>
                    <InputNumber class="form-control" @bind-Value="model.NumberOfParticipants" />
                    <ValidationMessage For="@(() => model.NumberOfParticipants)" />
                </div>

                <button type="submit" class="btn btn-primary" disabled="@isSubmitting">
                    @if (isSubmitting)
                    {
                        <span>Creando...</span>
                    }
                    else
                    {
                        <span>✓ Crear Tanda</span>
                    }
                </button>
            </EditForm>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger mt-3">@errorMessage</div>
    }
</div>

@code {
    private AngelesTandas.Application.Dto.TandaCreateRequest model = new();
    private string? errorMessage;
    private bool isSubmitting = false;

    private async Task CreateTanda()
    {
        isSubmitting = true;
        errorMessage = null;

        try
        {
            var auth = await AuthStateProvider.GetAuthenticationStateAsync();
            var userId = auth.User?.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value ?? "system";
            
            await TandaService.CreateTandaAsync(model, userId);
            Nav.NavigateTo("/");
        }
        catch (Exception ex)
        {
            errorMessage = "Error: " + ex.Message;
        }
        finally
        {
            isSubmitting = false;
        }
    }
}